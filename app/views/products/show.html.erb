<div class="container-fluid text-center">
    <div class="container col-sm-10 text-justify">
    <div class="h1"><%= @product.product_name %></div>
    <!-- Carousel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid" src="<%=@product.image1%>" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%=@product.image2%>" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid" src="<%=@product.image3%>" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="py-4"><%= @product.product_description %></div>
    <div class="container d-flex justify-content-center">
        <div class="h3 mr-5 pt-2">$<%= @product.price %> / 60 mins</div>
        <%= form_tag("/add_item/#{@product.id}") do %>
            <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">Add to Cart</button>
        <% end %>
        <%= link_to "Back to Explore", products_path, :class => "btn btn-primary btn-lg ml-5"%>
    </div>
    <div class="row my-5"></div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
        <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <% if Cart.where("order_id = ? AND product_id = ?", active_order.id, @product.id).exists? %>
                        <p class="text-center"> <%= @product.product_name %> is already in your cart! </p>
                    <% else %>
                        <p class="text-center">Success! You have added <%= @product.product_name %> to your cart!</p>
                    <% end %>
                </div>
            </div> 
        </div>
    </div>
</div>
<script>
    $('form').eq(0).on('click', function(e) {
        e.preventDefault();
        setTimeout(function() {
            document.querySelector('form').submit();
        }, 2000);
    });
</script>