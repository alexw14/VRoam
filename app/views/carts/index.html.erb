<div class="container-fluid text-center">
<div class="container col-sm-8 text-justify">
    <div class="container">
        <div class="h1 mb-4">Shopping Cart</div>
        <div id="line" class="my-4"></div>
    </div>
    <div class="container">
        <% if @carts.blank? %>
            <div class="h2">Your Shopping Cart is empty.</div>
        <% else %>
            <% @carts.each do |cart| %>
                <div class="row form-inline">
                    <div class="h4 my-4 mx-5 col-sm-4"><%= Product.find(cart.product_id).product_name %></div>
                    <div class="h4 my-4 mx-5 col-sm-2">$<%= Product.find(cart.product_id).price %></div>
                    <%= form_tag("/remove_item/#{cart.id}") do %>
                        <%= submit_tag "Remove", :class => "btn btn-danger btn-sm" %>
                    <% end %>
                </div>
            <% end %>
        <% end %>
        <div id="line" class="my-5"></div>
        <div class="text-right">
            <div class="h3 mr-5">Subtotal: $<%= @total %></div>
        </div>
    </div>
    <div class="row form-inline float-right px-5">
        <%= link_to "Continue Exploring", products_path, :class => "btn btn-primary mr-5"%>
        <div class="mx-5"></div>
        <div class="mx-4"></div>
        <%= form_tag("/purchase/active_order") do %>
            <%= submit_tag "Check Out", :class => "btn btn-success mr-5" %>
        <% end %>
    </div>
</div>
</div>


