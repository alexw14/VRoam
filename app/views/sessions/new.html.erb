<div class="container-fluid text-center">
    <div class="h2" id="alert"><%= alert %></div>
    <div class="image-container-login">
        <div id="login-image" class="front-page-image">
            <div class="outer-container">
                <div class="login-container ml-5">
                    <div class="h1 text-left ml-5 pl-5" style="color: white;">Log In</div>
                    <div class="text-left ml-5 pl-5" style="color: white;">
                        <%= form_tag sessions_path do %>
                        <div class="h4">
                            <%= label_tag :email %>
                            <br>
                            <%= text_field_tag :email, params[:email] %>
                        </div>
                        <div class="h4">
                            <%= label_tag :password %>
                            <br>
                            <%= password_field_tag :password %>
                        </div>
                        <div>
                            <%= submit_tag "Log In", :class => "btn btn-info btn-lg" %>
                        </div>
                        <% end %>
                        <div class="h4 pt-5">New User?</div>
                        <div><%= link_to "Sign Up Here!", new_user_path, :class => "btn btn-info" %></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>